<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/ll_linearLayout">

    <TextView
        android:textColor="#000000"
        android:id="@+id/tv_title"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical|start"
        android:hint="无标题"
        android:maxLines="1"
        android:textSize="20sp" />

    <View
        android:background="#B3B3B3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <com.example.pass.util.shade.viewAndModels.ShadeRelativeLayout
        android:layout_marginTop="5dp"
        android:id="@+id/shadeRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="19sp"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/text_scroll_bar"
            android:lineSpacingMultiplier="1.5"
            android:id="@+id/tv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.example.pass.util.shade.viewAndModels.ShadeView
            android:id="@+id/shadeView"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


    </com.example.pass.util.shade.viewAndModels.ShadeRelativeLayout>


</LinearLayout>